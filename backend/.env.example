# Database Configuration
# For Render PostgreSQL (production or external access)
DATABASE_URL=postgresql://username:password@host:port/database

# Alternative: Individual database configuration
# DB_USER=postgres
# DB_HOST=localhost
# DB_NAME=medical_reminder
# DB_PASSWORD=your_secure_password
# DB_PORT=5432

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_change_in_production
JWT_EXPIRY=24h

# Email Configuration (optional - for future email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=info

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
