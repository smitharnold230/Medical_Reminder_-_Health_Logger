{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "error",
    "no-console": "off"
  },
  "ignorePatterns": [
    "build/*",
    "dist/*",
    "node_modules/*",
    "*.config.js"
  ]
} 